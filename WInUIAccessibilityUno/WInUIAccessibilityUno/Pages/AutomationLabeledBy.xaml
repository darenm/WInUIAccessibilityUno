<Page
    x:Class="WInUIAccessibilityUno.Pages.AutomationLabeledBy"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WInUIAccessibilityUno.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,4,4" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image
            Grid.ColumnSpan="2"
            Height="50"
            Source="ms-appx:///WinUIAccessibilityUno/Assets/logo-winui.png"
            Stretch="Uniform" />

        <TextBlock
            Grid.Row="1"
            Style="{StaticResource HeaderTextBlockStyle}"
            Text="An Example Form" />
        <TextBlock
            Grid.Row="2"
            Style="{StaticResource SubheaderTextBlockStyle}"
            Text="Personal Information" />

        <TextBlock
            x:Name="FirstNameLabel"
            Grid.Row="3"
            VerticalAlignment="Center"
            Text="First Name" />
        <TextBox
            x:Name="txtFirstName"
            Grid.Row="3"
            Grid.Column="1"
            AutomationProperties.LabeledBy="{x:Bind FirstNameLabel}" />

        <TextBlock
            x:Name="LastNameLabel"
            Grid.Row="4"
            VerticalAlignment="Center"
            Text="Last Name" />
        <TextBox
            x:Name="txtLastName"
            Grid.Row="4"
            Grid.Column="1"
            AutomationProperties.LabeledBy="{x:Bind LastNameLabel}" />

        <TextBlock
            Grid.Row="7"
            Style="{StaticResource SubheaderTextBlockStyle}"
            Text="Address Information" />

        <TextBlock
            x:Name="AddressLabel"
            Grid.Row="8"
            VerticalAlignment="Center"
            Text="Address" />
        <TextBox
            x:Name="txtAddress"
            Grid.Row="8"
            Grid.Column="1"
            AutomationProperties.LabeledBy="{x:Bind AddressLabel}" />

        <TextBlock
            x:Name="StateLabel"
            Grid.Row="9"
            VerticalAlignment="Center"
            Text="State" />
        <ComboBox
            x:Name="comboStates"
            Grid.Row="9"
            Grid.Column="1"
            AutomationProperties.LabeledBy="{x:Bind StateLabel}"
            ItemsSource="{x:Bind States}" />

        <TextBlock
            x:Name="StatusLabel"
            Grid.Row="10"
            VerticalAlignment="Center"
            Text="Status" />
        <StackPanel Grid.Row="10" Grid.Column="1">
            <RadioButton GroupName="Status">Active</RadioButton>
            <RadioButton GroupName="Status">In-active</RadioButton>
            <RadioButton GroupName="Status">Pending</RadioButton>
        </StackPanel>

        <Image
            Grid.Row="11"
            Grid.ColumnSpan="2"
            Height="5"
            Source="ms-appx:///WinUIAccessibilityUno/Assets/Banner.png"
            Stretch="Fill" />

        <StackPanel
            Grid.Row="12"
            Margin="0,8"
            Padding="3"
            BorderBrush="{ThemeResource SystemControlBackgroundBaseMediumBrush}"
            BorderThickness="1"
            Orientation="Horizontal">
            <Image
                Height="24"
                Margin="0,0,5,0"
                Source="ms-appx:///WinUIAccessibilityUno/Assets/FolderIcon.png"
                Stretch="Uniform" />
            <TextBlock Text="C:\Program Files" />
        </StackPanel>


        <Button
            Grid.Row="15"
            Click="{x:Bind ShowMessage}"
            Content="Save" />
        <Button
            Grid.Row="15"
            Grid.Column="1"
            Click="{x:Bind ShowMessage}"
            Content="Cancel" />
    </Grid>
</Page>
